@page "/animals/create"
@using Models;


<div class="row justify-content-start">
    <div class="col-xl-8 col-lg-10 col-md-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h4 class="m-0 font-weight-bold text-primary">@Title</h4>
            </div>
            <div class="card-body">
               <EditForm Model="AnimalModel" class="custom-form" OnValidSubmit="HandleHotelRoomUpsert">
                    <DataAnnotationsValidator />
                    <div class="custom-form__group">
                        <ValidationMessage For="() => AnimalModel.Name"/>
                        <InputText placeholder="Name" class="custom-form__input" @bind-Value="AnimalModel.Name" />
                        <label for="name" class="custom-form__label">Name</label>
                    </div>
                    <div class="custom-form__group">
                        <ValidationMessage For="() => AnimalModel.Species" />
                        <InputText id="species" placeholder="Species" class="custom-form__input" @bind-Value="AnimalModel.Species" />
                        <label for="species" class="custom-form__label">Species</label>
                    </div>
                    <div class="custom-control custom-checkbox mb-4 ml-3">
                        <input type="checkbox" class="custom-control-input" id="neutered">
                        <label class="custom-control-label" for="neutered">
                            Neutered
                        </label>
                    </div>
                    <div class="custom-form__group">
                        <ValidationMessage For="() => AnimalModel.WeightInKilos" />
                        <InputNumber id="weightInKilos" placeholder="Weight In Kilos (Use Comma)" class="custom-form__input" @bind-Value="AnimalModel.WeightInKilos" />
                        <label for="weightInKilos" class="custom-form__label">Weight In Kilos (Use Comma)</label>
                    </div>
                    <div class="custom-form__group">
                        <ValidationMessage For="() => AnimalModel.EscapeAttempts" />
                        <InputNumber id="escapeAttempts" placeholder="Escape Attempts" class="custom-form__input" @bind-Value="AnimalModel.EscapeAttempts" />
                        <label for="escapeAttempts" class="custom-form__label">Escape Attempts</label>
                    </div>            
                    <div class="d-sm-flex align-items-center justify-content-end my-2">
                        <a href="" class="btn btn-secondary btn-icon-split mr-3">
                            <span class="icon text-white-50">
                                <i class="fas fa-arrow-left"></i>
                            </span>
                            <span class="text px-4">Cancel</span>
                        </a>
                        <button href="#" class="btn btn-primary btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-check"></i>
                            </span>
                            <span class="text px-4">Save</span>
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>


@code {
    private AnimalDto AnimalModel { get; set; } = new AnimalDto();
    private string Title { get; set; } = "Register a new patient"; 
    private async Task HandleHotelRoomUpsert()
    {
        AnimalModel.Species = "Button clicked";    
    }
}


