@page "/animals"
@using Models;
@using VetClinic_Server.Data;
@inject WeatherForecastService ForecastService;
@inject IAnimalRepository AnimalRepository;

 <!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Animals</h1>
    <a href="animals/create" class="btn btn-warning btn-icon-split">
        <span class="icon text-white-50">
            <i class="fas fa-plus"></i>
        </span>
        <span class="text">Add a new patient</span>
    </a>
</div>

@if (Animals == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                         <tr>
                            <th>Name</th>
                            <th>Species</th>
                            <th>Sex</th>
                            <th>Weight In Kilos</th>                        
                            <th>Neutered</th>
                            <th>Escape Attempts</th>
                            <th>Chipped</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Species</th>
                            <th>Sex</th>
                            <th>Weight In Kilos</th>                        
                            <th>Neutered</th>
                            <th>Escape Attempts</th>
                            <th>Chipped</th>
                            <th>&nbsp;</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var animal in Animals)
                        {
                            <tr>
                                <td>@animal.Name</td>
                                <td>@animal.Species</td>
                                <td>@animal.Sex</td>
                                <td>@GetWeightInKilos(animal.WeightInKilos)</td>
                                <td>@animal.Neutered</td>
                                <td>@animal.EscapeAttempts</td>
                                <td>@animal.Chipped</td>
                                <th>&nbsp;</th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

