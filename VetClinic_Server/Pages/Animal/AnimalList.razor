@code {
    private IEnumerable<AnimalDto> Animals;

    protected override async Task OnInitializedAsync()
    {
        Animals = await AnimalRepository.GetAllAnimals();
    }

    private string ReturnNeutered(bool? neutered)
    {
        if (neutered == null) return "Unknown";
        return ((bool)neutered ? "Yes" : "No");
    }

    private string GetWeightInKilos(decimal? weight)
    {
        if (weight is null) return "Unknown";
        else
        {
            return weight.ToString();
        }
    }

    private string NullableBoolToYesNoOrUnknown(bool? boolValue)
    {
        if (boolValue is null) return "Unknown";
        else
        {
            return (bool)boolValue ? "Yes" : "No";
        }
    }
}

