@code {
    private AnimalDto AnimalModel { get; set; } = new AnimalDto();
   
    private string Title { get; set; } = "Register a new patient"; 

    private async Task HandleHotelRoomUpsert()
    {
        await AnimalRepository.CreateAnimal(AnimalModel);
        NavigationManager.NavigateTo("/animals");
    }

    private IEnumerable<SpeciesDto> Species;

    protected override async Task OnInitializedAsync()
    {
        Species = await SpeciesRepository.GetAllSpecies();
    }
}


